@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row glass-cf-style d-flex align-items-center me-2 ms-2 mt-5 p-5">
    <div class=" col-12 mt-5  col-lg-6 order-last order-lg-first text-center text-light">
        <section>
            <form class="glass-cf-style p-4" id="account" method="post">
                <h2>WELCOME</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating ">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label text-dark ">Enter Email</label>
                    <span asp-validation-for="Input.Email" class="text-light mt-1"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-3" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label text-dark">Enter Password</label>
                    <span asp-validation-for="Input.Password" class="text-light mt-1"></span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg glass-button">LOGIN</button>
                </div>
                <div>
                    <a class="w-100 btn btn-lg glass-button mt-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">NEW USER?</a>
                </div>
            </form>
        </section>
    </div>

    <div class="col-12 col-lg-6 order-first order-lg-last d-flex justify-content-center">

        <img src="/img/black_book_pro_logo_510.png" alt="address book logo" class="img-fluid" data-tilt />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
