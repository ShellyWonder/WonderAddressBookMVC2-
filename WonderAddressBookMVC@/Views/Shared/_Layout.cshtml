@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Black Book Pro | SJ Wonder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/glassStyle.css" />
   @* <link rel="stylesheet" href="~/WonderAddressBookMVC2.styles.css" asp-append-version="true" />*@

    <!-- custom favicon-->
    @await Html.PartialAsync("_Favicons")

</head>
<body class="pageBG">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-transparent border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Landing">Black Book Pro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Landing">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {

                            <li>
                                <form class="form-inline d-inline" asp-controller="Contacts" asp-action="SearchContacts" method="post">
                                    <div class="input-group">
                                        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Search" />
                                        <input class="btn btn-outline-warning my-2 my-sm-0" type="submit" name="button" value="Search" />

                                    </div>
                                </form>
                            </li>
                        }
                    </ul>


                    <partial name="_LoginPartial" />


                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid background">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class=" footer mt-auto py-3  ">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-lg-3 gy-2">
                <div class="col order-last order-lg-first text-light">
                    <div>
                        <span class="text-muted">&copy;2023 - Black Book Pro - All Rights Reserved </span>
                        <a class="d-flex d-none d-md-inline-block" href="mailto:shelly@wonderwebdev.com"> | shelly@wonderwebdev.com</a>
                    </div>
                </div>
                <div class="col d-lg-flex d-none justify-content-lg-center">
                    <a href="http://www.wonderwebdev.com" target="_blank" title="SJ Wonder Portfolio Site">
                        <img src="/img/White logo - no background.svg" alt="SJ Wonder Logo" height="65" />
                    </a>
                </div>
                <!--using font awesome for social media icons-->
                <div class="col align-items-center justify-content-end d-none d-lg-flex">
                    <div class="row">
                        <div class="col social">
                            <a href="https://www.linkedin.com/in/shelly-wonder-153990233/" title="Linked In Profile" target="_blank"><i class="fab fa-linkedin fa-2x"></i></a>
                        </div>
                        <div class="col social">
                            <a href="https://github.com/ShellyWonder/WonderAddressBookMVC/" title="Black Book Pro Repo" target="_blank"><i class="fab fa-github fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--container close tag-->
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/5db21ba9c6.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
