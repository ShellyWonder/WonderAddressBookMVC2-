@model WonderAddressBookMVC_.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="row">

    <div class="col  m-4 d-flex justify-content-sm-start justify-content-md-center">
        <div class="glass-cf-style m-4 p-4">
            <h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">DELETE CONTACT</h1>
            <hr />
            <h3>Are you sure you want to delete <span class="delete-warning"> @Model.Name</span> by @Model.AppUser?.FullName? </h3>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="m-1 w-100 btn glass-button" />
                <a asp-action="Index"> Back to List</a>
            </form>
        </div>
    </div>
</div>

