@model IEnumerable<WonderAddressBookMVC_.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<<div class="mt-2 mb-3 glass-cf-style">
    <h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">ALL CATEGORIES</h1>

    <a class="glass-button m-3" asp-controller="Categories" asp-action="Create">Create New Category</a>
</div>

@foreach (var item in Model)
{
    <div class="mb-3 glass-cf-style">
        <div class="row g-2">
            <div class="col">
                <div class="card-body">
                    <h5 class="card-title">@item.Name </h5>

                </div>
                <div class="mb-2 ms-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="bi-pencil-fill"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete"><i class="bi-trash-fill"></i></a>
                    <a asp-action="EmailCategory" asp-route-id="@item.Id" title="Email"><i class="bi-envelope-fill"></i></a> |
                </div>
            </div>
        </div>
    </div>
}
