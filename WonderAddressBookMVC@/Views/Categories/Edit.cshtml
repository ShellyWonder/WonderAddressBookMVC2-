@model WonderAddressBookMVC_.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    @*<div class="col-12">
    </div>*@
    <div class="col-12  m-4 d-flex justify-content-sm-start justify-content-md-center">

        <form class=" glass-cf-style p-4" asp-action="Edit" method="post">
        <h1 class=" mt-3">Edit @Model.Name</h1>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppUserId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="w-100 mt-3 btn btn-lg glass-button" />
            </div>
        <div class="mt-2">
            <a asp-action="Index">Back to List</a>
        </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
